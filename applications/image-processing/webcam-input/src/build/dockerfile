FROM node:14 as build
WORKDIR /app
COPY --from=git /project/package*.json /app/
RUN npm install
COPY --from=git /project /app/
RUN npm run build -- --output-path=./dist/out --configuration=production

FROM nginx:latest
COPY --from=build /app/dist/out/ /usr/share/nginx/html
COPY --from=build /app/src/build/nginx.conf /etc/nginx/conf.d/default.conf

COPY --from=build /app/src/assets/quix-logo.svg /usr/share/nginx/html/quix-logo.svg
RUN chown -R www-data:www-data /usr/share/nginx/html/ && chmod -R 0755  /usr/share/nginx/html/

COPY --from=git /project/run_server.sh /
RUN chmod +x /run_server.sh
CMD ["/run_server.sh"]