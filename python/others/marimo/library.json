{
  "libraryItemId": "marimo-ds",
  "name": "Marimo",
  "language": "docker",
  "tags": {
    "Category": ["Data Exploration"],
    "Type": ["Auxiliary Services"]
  },
  "shortDescription": "Run Marimo reactive notebooks in your pipeline.",
  "DefaultFile": "dockerfile",
  "EntryPoint": "dockerfile",
  "IconFile": "icon.png",
  "DeploySettings": {
    "DeploymentType": "Service",
    "CpuMillicores": 500,
    "MemoryInMb": 2000,
    "Replicas": 1,
    "PublicAccess": true,
    "State": {
      "Enabled": true,
      "Size": 1
    },
    "Network": {
      "Ports":
      [
        {
          "Port": 80,
          "TargetPort": 8080
        }
      ]
    },
    "plugin": {
      "embeddedView": {
        "enabled": true,
        "hideHeader": true,
        "default": true
      },
      "sidebarItem": {
        "show": true,
        "badge": "BETA",
        "icon": "note_alt"
      }
    }
  },
 
  "Variables": [
    {
      "Name": "MARIMO_MODE",
      "Type": "EnvironmentVariable",
      "InputType": "FreeText",
      "Description": "Mode to run Marimo in: 'run' (read-only notebook), 'edit' (editable notebook), 'browser' (file browser)",
      "DefaultValue": "run",
      "Required": false
    },
    {
      "Name": "MARIMO_NOTEBOOK",
      "Type": "EnvironmentVariable",
      "InputType": "FreeText",
      "Description": "The notebook file to open (e.g., main.py)",
      "DefaultValue": "main.py",
      "Required": false
    },
    {
      "Name": "ANTHROPIC_API_KEY",
      "Type": "EnvironmentVariable",
      "InputType": "Secret",
      "Description": "Token generated from https://platform.claude.com/settings/keys.",
      "Required": false
    }
  ]
}
